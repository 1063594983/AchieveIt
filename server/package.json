{
  "name": "achieve-it-server",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "husky": "^4.2.3",
    "istanbul": "^1.0.0-alpha.2",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.1.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.6",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "sendcloud": "^1.6.3",
    "superagent": "^5.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@types/chai": "^4.2.11",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.3",
    "@types/mocha": "^7.0.2",
    "achieve-it-contract": "0.0.1",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^7.1.1",
    "mochawesome": "^5.0.0",
    "nodemon": "^2.0.2",
    "source-map-support": "^0.5.16",
    "sucrase": "^3.12.1",
    "ts-node": "^8.8.1"
  },
  "scripts": {
    "build": "sucrase src  -d ./dist --transforms typescript,imports",
    "start": "nodemon -e ts --watch src --exec \"sucrase-node ./src/index.ts\"",
    "test": "mocha --require ts-node/register --recursive ./test/**/*.test.ts --exit",
    "test-report": "mocha --require ts-node/register --recursive --reporter mochawesome ./test/**/*.test.ts --exit",
    "test-cover": "nyc mocha --require ts-node/register --recursive ./test/**/*.test.ts --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
